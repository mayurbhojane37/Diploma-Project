<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/abstract2">


    <Spinner
        android:id="@+id/division"
        android:layout_width="323dp"
        android:layout_height="43dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/subject"
        android:layout_width="324dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division" />

    <Spinner
        android:id="@+id/ass"
        android:layout_width="329dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject" />

    <Button
        android:id="@+id/gets"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/login_button_border"
        android:onClick="fetchGC"
        android:text="@string/get_grades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ass" />

    <TextView
        android:id="@+id/commentsgiven"
        android:layout_width="208dp"
        android:layout_height="127dp"
        android:layout_marginTop="104dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:text="@string/xyz_abc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gets"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/obtainedMarks"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginTop="56dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:text="@string/_0_0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gets"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/Marks"
        android:layout_width="102dp"
        android:layout_height="31dp"
        android:layout_marginTop="56dp"
        android:padding="5dp"
        android:text="@string/marks"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gets" />

    <TextView
        android:id="@+id/comments"
        android:layout_width="104dp"
        android:layout_height="33dp"
        android:layout_marginTop="104dp"
        android:padding="5dp"
        android:text="@string/comments"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gets" />
</androidx.constraintlayout.widget.ConstraintLayout>