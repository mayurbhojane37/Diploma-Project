<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract2"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center">


    <TextView
        android:id="@+id/prevText"
        android:layout_width="319dp"
        android:layout_height="175dp"
        android:background="@drawable/answer"
        android:maxLines="5"
        android:paddingStart="25dp"
        android:paddingTop="25dp"
        android:paddingEnd="25dp"
        android:text="@string/About_us_info"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237" />

    <ImageButton
        android:id="@+id/plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/descText"
        android:background="@drawable/plus"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/prevText"
        app:layout_constraintEnd_toEndOf="@+id/prevText"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="@+id/prevText"
        app:layout_constraintTop_toTopOf="@+id/prevText"
        app:layout_constraintVertical_bias="0.816"
        android:contentDescription="@string/plus"
        android:focusable="true" />

    <TextView
        android:id="@+id/descText"
        android:layout_width="286dp"
        android:layout_height="487dp"
        android:background="@mipmap/lists"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:text="@string/About_us_info"
        android:textColor="#111111"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438" />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="39dp"
        android:layout_height="37dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/descText"
        app:layout_constraintEnd_toEndOf="@+id/descText"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="@+id/descText"
        app:layout_constraintTop_toTopOf="@+id/descText"
        app:layout_constraintVertical_bias="0.957"
        app:srcCompat="@drawable/minus"
        android:contentDescription="@string/plus" />


</androidx.constraintlayout.widget.ConstraintLayout>